extends ../base/base

include ../../components/uikitHeader/uikitHeader
include ../../components/layout/layout
include ../../components/form-control/form-control
include ../../components/text-field/text-field
include ../../components/dropdown/dropdown
include ../../components/checkbox-buttons/checkbox-buttons
include ../../components/radio-buttons/radio-buttons
include ../../components/toggle/toggle
include ../../components/masked-text-field/masked-text-field
include ../../components/like-button/like-button
include ../../components/rate-button/rate-button
include ../../components/range-slider/range-slider
include ../../components/buttons/buttons
include ../../components/date-dropdown/date-dropdown
include ../../components/expandable-checkbox-list/expandable-checkbox-list
include ../../components/bullet-list/bullet-list
include ../../components/icon-text-list/icon-text-list
include ../../components/user-comment/user-comment

block variables

block title
  | Form Elements

block main
  +uikitHeader()
  main.form-elements
    +layout-form-elements()
      section.layout-form-elements__left-col
        +form-control('text field')
          span.form-control__ui-status Default
          +text-field({
            placeholder: 'Email'
          })
        +form-control('text field')
          span.form-control__ui-status Hover / Focus
          +text-field({
            placeholder: 'This is pretty awesome',
            value: 'This is pretty awesome'
          })
        +form-control('dropdown')
          +dropdown-guests()
        +form-control('masked text field')(class='form-control--large-margin-bottom')
          +masked-text-field()
        +form-control('')(class='form-control--large-margin-bottom')
          +date-dropdown-separate('date dropdown', 'date dropdown')
        +form-control('filter date dropdown')(class='form-control--short form-control--large-margin-bottom')
          +date-dropdown()
        +form-control('subscription text field')(class='form-control--short')
          +text-field-subscribe('Email')
      section.layout-form-elements__center-col
        +form-group-control('Checkbox buttons')
          +checkbox-button({
            name: 'name1',
            text: 'Можно курить'
          })
          +checkbox-button({
            name: 'name2',
            text: 'Можно с питомцами',
            check: true
          })
          +checkbox-button({
            name: 'name3',
            text: 'Можно пригласить гостей (до 10 человек)',
            check: true
          })
        +form-group-control('Radio Buttons')
          +radiobox('name4', 'Мужчина', true)
          +radiobox('name4', 'Женщина')
        +form-group-control('Toggle')
          +toggle('Получать спецпредложения', true)
          +toggle('Получать спецпредложения')
        +form-group-control('Like button')
          +like-button('2')
          +like-button('12')(class='liked')
        +form-group-control('Rate button')
          +rate-button('simple-rate', '4')
          +rate-button('simple-rate2', '5')
      section.layout-form-elements__right-col
        +form-group-control('Range slider')(class='form-control--short')
          +range-slider()
        +form-group-control('Buttons')
          .ui-button-wrap
            +btnType1({text: 'click me'})
            +btnType1({text: 'click me'})(class='button-type-1--hover')
          .ui-button-wrap
            +btnType2({text: 'click me'})
            +btnType2({text: 'click me'})(class='button-type-2--hover')
          .ui-button-wrap
            +btnType3({text: 'click me'})
            +btnType3({text: 'click me'})(class='button-type-3--hover')
          +btnLarge({text: 'Перейти к оплате'})
        +form-group-control('Pagination')
          include ../../components/pagination/pagination
    +layout-form-elements()(class='layout-form-elements--ui-row-2')
      section.layout-form-elements__left-col
        +form-control('dropdown')(class='form-control--short form-control--dropdown-default-wrap')
          span.form-control__ui-status Default
          +dropdown()
        +form-control('dropdown')(class='form-control--short')
          span.form-control__ui-status expanded
          +dropdown()(class='menu-open')
      section.layout-form-elements__center-col-type2
        +form-control('dropdown')
          +dropdown-guests()(class='menu-open')
      section.layout-form-elements__right-col
        +form-control('dropdown')
          +dropdown-guests-ui()(class='menu-open')
    +layout-form-elements()(class='layout-form-elements--ui-row-3')
      section.layout-form-elements__left-col
        +form-control('')
          +expandable-checkbox-list('','','expandable checkbox list')
        +form-group-control('')
          +expandable-checkbox-list('expandable-checkbox-list-box__btn--open','show','expandable checkbox list')
      section.layout-form-elements__center-col
        +form-group-control('rich Checkbox Buttons')
          +checkbox-button({
            name: 'rich1',
            text: 'Ширина коридоров в номере не менее 91 см.',
            rich_title: 'Широкий коридор'
          })
          +checkbox-button({
            name: 'rich1',
            text: 'На 1 этаже вас встретит специалист  и проводит до номера.',
            rich_title: 'Помощник для инвалидов'
          })(class='custom-checkbox--rich')
      section.layout-form-elements__right-col
        +form-group-control('bullet list')
          +bullet-list()
    +layout-form-elements()
      section.layout-form-elements__left-col
        +text-icon-block({
          img: 'insert_emoticon.svg',
          title: 'Комфорт',
          text: 'Шумопоглощающие стены'
        })
        +text-icon-block({
          img: 'location_city.svg',
          title: 'Удобство',
          text: 'Окно в каждой из спален'
        })
      section.layout-form-elements__rigt-col-type2
        +user-comment({
          img: 'user.png',
          name: 'Мурад Сарафанов',
          time: '5 дней назад',
          likeCount: '12',
          like: 'liked',
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
        })

