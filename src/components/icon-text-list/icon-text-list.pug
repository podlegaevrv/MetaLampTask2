mixin text-icon-comfort()
    .icon-text-block
        img.icon-text-block__img(src=require('../../components/icon-text-list/img/insert_emoticon.svg').default)
        div
            span.icon-text-block__title Комфорт
            span.icon-text-block__text Шумопоглощающие стены

mixin text-icon-tower()
    .icon-text-block
        img.icon-text-block__img(src=require('../../components/icon-text-list/img/location_city.svg').default)
        div
            span.icon-text-block__title Удобство
            span.icon-text-block__text Окно в каждой из спален
